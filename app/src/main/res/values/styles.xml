<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash -->
    <style name="SplashTheme" parent = "Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/spash_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- JoinLoginPage -->
    <style name="JoinLoginTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <!-- TextInputLayout OutLineBox 에서 EditText Focus 시 색을 ColorAccent 를 바라봄. -->
        <item name="colorAccent">@color/textColor_High_Emphasis</item>
    </style>

    <!-- CustomDialog -->
    <style name="CustomDialogStyle">
        <item name="android:windowEnterAnimation">@anim/modal_in</item>
        <item name="android:windowExitAnimation">@anim/modal_out</item>
    </style>

    <!--TextInputLayout-->
    <style name="textInputLayer" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/textColor_Low_Emphasis</item>
        <item name="boxStrokeColor">@color/textColor_High_Emphasis</item>
    </style>

    <!--Loading Progress-->
    <style name="loading_progress">
        <item name="android:layout_width">40.67dp</item>
        <item name="android:layout_height">40.67dp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateDrawable">@drawable/progress_loading</item>
    </style>

</resources>
