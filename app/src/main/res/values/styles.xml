<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryText</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <!-- Splash -->
    <style name="SplashTheme" parent = "Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/spash_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- CustomDialog -->
    <style name="CustomDialogStyle">
        <item name="android:windowEnterAnimation">@anim/modal_in</item>
        <item name="android:windowExitAnimation">@anim/modal_out</item>
    </style>

    <!-- Material Button 을 사용하기 위해 AlertDialog Theme 를 MaterialComponents 를 상속 받음. -->
    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">

    </style>

    <!--TextInputLayout-->
    <style name="textInputLayer" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/colorDisabledHintText</item>
        <item name="hintTextColor">@color/colorPrimaryText</item>
        <item name="boxStrokeColor">@color/colorPrimaryText</item>
    </style>

    <!--Loading Progress-->
    <style name="loading_progress">
        <item name="android:layout_width">40.67dp</item>
        <item name="android:layout_height">40.67dp</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateDrawable">@drawable/progress_loading</item>
    </style>

    <!-- BottomSheetDialog -->
    <style name="BottomSheetDialogStyle" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
