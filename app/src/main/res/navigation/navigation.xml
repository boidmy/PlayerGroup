<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.playergroup.fragments.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_myInfoFragment"
            app:destination="@id/myInfoFragment" />
        <action
            android:id="@+id/action_mainFragment_to_commonBoard"
            app:destination="@id/commonBoard" />
    </fragment>

    <fragment
        android:id="@+id/myInfoFragment"
        android:name="com.example.playergroup.fragments.MyInfoFragment"
        android:label="MyInfoFragment"
        tools:layout="@layout/fragment_myinfo">
        <action
            android:id="@+id/action_myInfoFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@+id/myInfoFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/commonBoard"
        android:name="com.example.playergroup.board.CommonBoardFragment"
        android:label="CommonBoard"
        tools:layout="@layout/fragment_common_board">
        <action
            android:id="@+id/action_commonBoard_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@+id/commonBoard"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>